# ============================================================================
# XOAI HEALTHCARE PLATFORM - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values
# Required fields are marked with [REQUIRED]
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# [REQUIRED] MySQL Database Connection
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://xoai_user:xoai_password@localhost:3306/xoai"

# MySQL Test Database (for running tests)
DATABASE_URL_TEST="mysql://xoai_user:xoai_password@localhost:3306/xoai_test"

# Redis Cache Connection (for session caching and rate limiting)
REDIS_URL="redis://localhost:6379"

# MongoDB URI (only needed for legacy data migration from Asclepius)
MONGO_URI="mongodb://localhost:27017/asclepius"

# ============================================================================
# AUTHENTICATION (NextAuth.js)
# ============================================================================

# [REQUIRED] Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# [REQUIRED] Secret for encrypting sessions and tokens (min 32 characters)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here-change-in-production"

# ============================================================================
# GOOGLE OAUTH (Optional - for social login)
# ============================================================================

# Google OAuth 2.0 credentials from Google Cloud Console
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ============================================================================
# GOOGLE HEALTHCARE API (Required for FHIR/Healthcare features)
# ============================================================================

# Google Cloud Project Configuration
GOOGLE_PROJECT_ID=""
GOOGLE_LOCATION=""
GOOGLE_DATASET_ID=""
GOOGLE_FHIR_STORE_ID=""

# Option 1: Use service account JSON file (recommended for local dev)
GOOGLE_APPLICATION_CREDENTIALS=""

# Option 2: Use individual service account credentials (for production/CI)
GOOGLE_SERVICE_ACCOUNT_EMAIL=""
GOOGLE_PRIVATE_KEY_ID=""
# Note: Replace \n with actual newlines or use escaped format
GOOGLE_PRIVATE_KEY=""

# ============================================================================
# AI SERVICES
# ============================================================================

# Google Gemini API Key (for AI-powered medical analysis)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=""

# OpenAI API Key (for GPT-4 clinical decision support)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# ============================================================================
# HIPAA COMPLIANCE & ENCRYPTION
# ============================================================================

# [REQUIRED] AES-256-GCM Encryption Key for PHI (Protected Health Information)
# Must be 32 bytes (64 hex characters) for AES-256
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-32-byte-encryption-key-here-change-this"

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment: development | production | test
NODE_ENV="development"

# Server port (default: 3000)
PORT=3000

# ============================================================================
# DEPLOYMENT (Auto-set by platforms)
# ============================================================================

# Vercel deployment URL (auto-set by Vercel, leave empty for local dev)
VERCEL_URL=""

# ============================================================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=""

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=""

# ============================================================================
# DOCKER SERVICES (Reference)
# ============================================================================
# Start with: docker-compose up -d
# - MySQL: localhost:3306 (user: xoai_user, password: xoai_password)
# - Redis: localhost:6379
# - Adminer: http://localhost:8080
# ============================================================================
